    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Node: Current File",
        "program": "${workspaceFolder}/${relativeFile}",
        "cwd": "${workspaceFolder}"
      },
      {
        "name": "Launch express api",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/app.js",
        "stopOnEntry": true,
        "args": [],
        "cwd": "${workspaceRoot}",
        "preLaunchTask": null,
        "runtimeExecutable": null,
        "runtimeArgs": [
            "--nolazy"
        ],
        "env": {
            "NODE_ENV": "development",
            "PORT": "4000"
        },
        "sourceMaps": false,

    }
    ]
}
